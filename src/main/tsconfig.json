{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "../../build",
    "rootDir": "../",
    "noEmitOnError": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  }
}
